{
  "name": "armis-military-system",
  "version": "2.0.0",
  "description": "Army Resource Management Information System - Phase 2 Modernization",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:js": "eslint shared/**/*.js admin_branch/js/**/*.js",
    "lint:css": "stylelint shared/**/*.css",
    "build": "echo 'Build process - minify CSS and JS files'",
    "dev": "echo 'Development server would start here'",
    "accessibility": "pa11y-ci --sitemap http://localhost:8000/sitemap.xml || echo 'Accessibility testing'"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "shared/**/*.js",
      "admin_branch/js/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "jsdom": "^22.1.0",
    "pa11y-ci": "^3.0.1",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^34.0.0"
  },
  "keywords": [
    "military",
    "personnel-management",
    "army",
    "resource-management",
    "pwa",
    "accessibility",
    "internationalization"
  ],
  "author": "ARMIS Development Team",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Marriott12/armis.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "directories": {
    "test": "tests"
  },
  "bugs": {
    "url": "https://github.com/Marriott12/armis/issues"
  },
  "homepage": "https://github.com/Marriott12/armis#readme"
}
