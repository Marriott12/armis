{
    "name": "armis/military-system",
    "description": "Army Resource Management Information System - Phase 2 Modernization",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "ARMIS Development Team",
            "email": "dev@armis.military.gov"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-mysqli": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-intl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "ARMIS\\": "shared/",
            "ARMIS\\Admin\\": "admin_branch/",
            "ARMIS\\Training\\": "training/",
            "ARMIS\\Operations\\": "operations/",
            "ARMIS\\Finance\\": "finance/"
        },
        "files": [
            "shared/i18n.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ARMIS\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage/",
        "analyse": "phpstan analyse",
        "cs": "phpcs",
        "cbf": "phpcbf",
        "md": "phpmd . text cleancode,codesize,controversial,design,naming,unusedcode --exclude vendor/",
        "quality": [
            "@cs",
            "@analyse",
            "@md"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}